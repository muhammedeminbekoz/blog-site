<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-contact md-padding">
	<h1 class="text-white text-center">ADD POST</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="addpost" class="md-padding">
	<div class="container">

		<div class="row text-center">
			<div class="col-md-4 offset-md-4">
				<div class="section-header">
					<h2 class="title">Update Post</h2>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<form action="/admin/posts/{{#each post}}{{_id}}{{/each}}?_method=PUT" method="POST" enctype="multipart/form-data">
			    <input type="hidden" name="_method" value="PUT">
					<div class="row">
						<div class="offset-2 col-md-8">
							<div class="form-group">
								<input
									class="form-control"
									name="title"
									type="text"
								    value="{{#each post}}{{title}}{{/each}}" 
									required="required"
									data-validation-required-message="Please enter your user name."
								/>
								<p class="help-block text-danger"></p>
							</div>
							   	<div class="form-group">
								<textarea
									class="form-control"
									name="content"
									required="required"
                                    rows="7"
									data-validation-required-message="Please enter a message."
								>{{#each post}}{{content}}{{/each}}</textarea>
								<p class="help-block text-danger"></p>
							</div>
        
                        <div class="form-group">
							<label for="">Choose your Category</label>
							<select name="category" class="form-control">
								{{#each categories}}
			                       <option  value="{{#each this}}{{_id}}{{/each}}">{{#each this}}{{name}}{{/each}}</option>         
		                        {{/each}}
							</select>
							<p class="help-block text-danger"></p>
                        </div>
                               <div class="form-group">
								<input
									class="form-control"
									name="post_image"
									type="file"
									placeholder="Image *"
									required="required"
									data-validation-required-message="choose your image."
								/>
								<p class="help-block text-danger"></p>
							</div>

								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="main-btn" type="submit">Update Post</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>